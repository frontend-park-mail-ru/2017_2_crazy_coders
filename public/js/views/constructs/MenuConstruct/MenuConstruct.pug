mixin menuConstruct(items)
    - var colClass = "col-lg-" + Math.round(12 / items.length);
    div.container.menuconstruct
        row
            each item in items
                div(class=colClass)
                    if item.backImg
                        img.img-responsive.menuconstruct-img(
                        src=item.defaultImg
                        onMouseOver="this.src='" + item.backImg + "'"
                        onMouseOut="this.src='" + item.defaultImg + "'"
                        id=item.id
                        )
                    else
                        img.img-responsive.menuconstruct-img(
                        src=item.defaultImg
                        id=item.id
                         )